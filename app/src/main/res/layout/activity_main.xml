<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393E46"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/screenField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonField">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="true"
            android:inputType="none"
            android:textSize="30sp"
            android:textAlignment="viewEnd"
            android:textColor="#81FFFFFF"
            android:fontFamily="@font/ropasans_regular"
            android:id="@+id/editOne"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:hint="0"
            android:textColorHint="@color/white"
            android:clickable="false"
            android:focusable="true"
            android:inputType="none"
            android:textSize="60sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:fontFamily="@font/ropasans_regular"
            android:id="@+id/editTwo"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/editOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screenField">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/special"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/sqrtBtn"
                android:text="sqrt"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sinBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"
                android:backgroundTint="#3282B8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/sinBtn"
                android:text="sin"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/sqrtBtn"
                app:layout_constraintEnd_toStartOf="@+id/cosBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"
                android:backgroundTint="#3282B8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/cosBtn"
                android:text="cos"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/sinBtn"
                app:layout_constraintEnd_toStartOf="@id/tanBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"
                android:backgroundTint="#3282B8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/tanBtn"
                android:text="tan"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/cosBtn"
                app:layout_constraintEnd_toStartOf="@+id/radBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"
                android:backgroundTint="#3282B8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/radBtn"
                android:text="rad"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/tanBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"
                android:backgroundTint="#3282B8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        first row-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRow1"
            app:layout_constraintTop_toBottomOf="@id/special"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/clr"
                android:text="AC"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                android:backgroundTint="#1B262C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dlt"
                app:cornerRadius="8dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/dlt"
                android:layout_marginStart="5dp"
                android:text="C"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                android:backgroundTint="#1B262C"
                app:layout_constraintStart_toEndOf="@id/clr"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/div"
                app:cornerRadius="8dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/div"
                android:layout_marginStart="5dp"
                android:text="รท"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="40sp"
                android:backgroundTint="#0F4C75"
                app:layout_constraintStart_toEndOf="@id/dlt"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/mul"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mul"
                android:layout_marginStart="5dp"
                android:text="ร"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="40sp"
                android:backgroundTint="#0F4C75"
                app:layout_constraintStart_toEndOf="@id/div"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="8dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        second row-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/btnRow1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sevenBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#1B262C"
                android:text="7"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/eightBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eightBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="8"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/nineBtn"
                app:layout_constraintStart_toEndOf="@id/sevenBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nineBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="9"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/plusBtn"
                app:layout_constraintStart_toEndOf="@id/eightBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plusBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#0F4C75"
                android:text="+"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="40sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nineBtn"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        third row-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/btnRow2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fourBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#1B262C"
                android:text="4"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/fiveBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fiveBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="5"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/sixBtn"
                app:layout_constraintStart_toEndOf="@id/fourBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sixBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="6"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/minusBtn"
                app:layout_constraintStart_toEndOf="@id/fiveBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minusBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#0F4C75"
                android:text="-"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="40sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sixBtn"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        fourth row-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/btnRow3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/oneBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#1B262C"
                android:text="1"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/twoBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/twoBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="2"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/threeBtn"
                app:layout_constraintStart_toEndOf="@id/oneBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/threeBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="3"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/modBtn"
                app:layout_constraintStart_toEndOf="@id/twoBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#0F4C75"
                android:text="%"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/threeBtn"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        fifth row-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/btnRow4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zeroBtn"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:backgroundTint="#1B262C"
                android:text="0"
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/dotBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dotBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#1B262C"
                android:text="."
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="25sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@id/equlBtn"
                app:layout_constraintStart_toEndOf="@id/zeroBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equlBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="#0F4C75"
                android:text="="
                android:fontFamily="@font/ropasans_regular"
                android:textStyle="bold"
                android:textSize="40sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dotBtn"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
